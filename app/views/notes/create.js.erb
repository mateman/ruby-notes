<% if @note.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('#tnote tbody').prepend(' <%= j render "note", note: @note %>');
  if($('#tnote tr').length > 7)
            {
                // Eliminamos la ultima columna
            $('#tnote tbody').find('tr:last').remove();

            };
  $('.alert').html("La nota ha sido creado con Ã©xito").show();
  $('#form-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @note.errors.full_messages[0] %>');
<% end %>